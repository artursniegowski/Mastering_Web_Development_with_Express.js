<!DOCTYPE html>
<html lang="en">
  <%- include('includes/header'); -%>
<body>
  
  <div class="container mt-5">
    <h1>Login</h1>
  
    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">
  
            <!-- Makes POST request to /login route -->
            <form action="/login" method="POST">
              <div class="mb-2">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" name="username" placeholder="email@example.com">
              </div>
              <div class="mb-2">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" name="password" placeholder="Password">
              </div>
              <button type="submit" class="btn btn-dark mb-3">Login</button>
            </form>
  
          </div>
        </div>
      </div>
  
      <div class="col-sm-4">
        <div class="card">
          <div class="card-body">
            <div class="d-grid gap-2">
              <a class="btn btn-social btn-google" href="/auth/google" role="button">
                <i class="fa-brands fa-google"></i>
                Sign In with Google
              </a>
            </div>
          </div>
          <div class="card-body">
            <div class="d-grid gap-2">
              <a class="btn btn-social btn-facebook" href="/auth/facebook" role="button">
                <i class="fa-brands fa-facebook"></i>
                Sign In with Facebook
              </a>
            </div>
          </div>
        </div>
      </div>
  
    </div>
  </div>

  <%- include('includes/footer'); -%>
</body>
</html>