<!DOCTYPE html>
<html lang="en">
  <%- include('includes/header'); -%>
<body>
  
  <div class="container-fluid centered">
    <div class="container">
      <i class="fa-solid fa-key fa-6x"></i>
      <h1 class="display-3 my-3">You've Discovered My Secret!</h1>
      <% usersWithSecrets.forEach(user => { %> 
        <p class="secret-text"><%= user.userSecret %></p>
      <% }); %>
      <hr class="my-4">
      <a class="btn btn-light btn-lg mx-1" href="/logout" role="button">Log Out</a>
      <a class="btn btn-dark btn-lg mx-1" href="/submit" role="button">Submit a Secret</a>
    </div>
  </div>

  <%- include('includes/footer'); -%>
</body>
</html>